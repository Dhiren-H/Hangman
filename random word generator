import requests
import random

wordsite = "https://svnweb.freebsd.org/csrg/share/dict/words?view=co&content-type=text/plain"
response = requests.get(wordsite)
WORDS = response.content.splitlines()

def randomword():
  word = random.choice(WORDS)
  if len(word) > 3:
    return word
  else:
    randomword()

print (randomword())
